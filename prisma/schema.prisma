

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String
  password String
  posts Post[]
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  slug String
  title String
  body String
  userId String @db.ObjectId
  author User @relation(fields: [userId], references: [id])
}
