

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid()) 
  name String
  email String
  password String
  posts Post[]
}

model Post {
  id String @id @default(uuid())  
  slug String
  title String
  body String
  userId String 
  author User @relation(fields: [userId], references: [id])
}
